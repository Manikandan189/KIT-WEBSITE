<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css-accounts.css">
    <title>Accounts</title>
</head>
<body>
    <h1>List of Accounts</h1>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Department</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% accounts.forEach(account => { %>
                <tr>
                    <td><%= account.first_name_R %></td>
                    <td><%= account.last_name_R %></td>
                    <td><%= account.email_id_R %></td>
                    <td><%= account.phone_number_R %></td>
                    <td><%= account.department_R %></td>
                    <td class="password-cell"><%= account.create_password_R %></td>
                    <td>
                        <a href="/EditAccount/<%= account._id %>" class="edit-btn">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
</body>
</html>
