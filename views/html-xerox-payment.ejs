<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Additional Information & Payment</title>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <link rel="stylesheet" href="/css-xerox-page1.css">
</head>
<body>
  <div class="container">
    <h1>Additional Information & Payment</h1>
    <form id="xeroxForm" method="post">
      <fieldset>
        <legend>Additional Information</legend>
        <div class="form-group">
          <label for="comments">Comments</label>
          <textarea id="comments" name="comments" rows="4" required></textarea>
        </div>
      </fieldset>

      <fieldset>
        <legend>Payment</legend>
        <p>Total Price: â‚¹<span id="totalPrice"><%= totalamount %></span></p>
        <input type="hidden" id="hiddenAmount" name="amount" value="<%= totalamount %>">
        
        <button id="rzp-button1" type="button">Proceed to Payment</button>
      </fieldset>
    </form>
    <script>
        // Event listener for the form submission
        document.getElementById('rzp-button1').onclick = function(e) {
          e.preventDefault();
          
          // Get the total price
          var totalPrice = parseFloat(document.getElementById('totalPrice').innerText);
          
          // Make a call to the backend to create the order
          fetch('/create-order', { 
            method: 'POST',
            body: JSON.stringify({ amount: totalPrice * 100 }), // Send amount in paise
            headers: {
              'Content-Type': 'application/json'
            }
          })
          .then(response => response.json())
          .then(data => {
            var options = {
              key: "rzp_live_mEUdXomhmM6cLN", // Your Razorpay key ID
              amount: totalPrice * 100, // Amount in paise
              currency: "INR",
              order_id: data.order_id, // Order ID from backend
              name: "Your Website Name",
              description: "Payment for Product",
              image: "your_logo_url",
              handler: function (response) {
                alert("Payment successful");
                // Handle payment response
              },
              prefill: {
                name: "Customer Name",
                email: "customer_email@example.com",
                contact: "customer_phone"
              },
              theme: {
                color: "#F37254"
              }
            };
            
            // Open Razorpay checkout modal
            var rzp1 = new Razorpay(options);
            rzp1.open();
          })
          .catch(error => {
            console.error('Error:', error);
          });
        };
    </script>
  </div>
</body>
</html>
