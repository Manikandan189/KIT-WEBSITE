<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css-feedbacks.css">
    <title>Feedbacks</title>
</head>
<body>
    <h1>All Feedbacks</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% feedbacks.forEach(feedback => { %>
                <tr>
                    <td><%= feedback.fb_name %></td>
                    <td><%= feedback.fb_email %></td>
                    <td><%= feedback.fb_message %></td>
                    <td>
                        <form action="/deleteFeedback" method="POST" style="display: inline;">
                            <input type="hidden" name="id" value="<%= feedback.id %>">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
